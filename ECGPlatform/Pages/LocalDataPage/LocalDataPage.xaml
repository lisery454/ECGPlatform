<Page x:Class="ECGPlatform.LocalDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ECGPlatform"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      d:Height="1000 " d:Width="2000"
      mc:Ignorable="d" Title="LocalDataPage">
	<Grid>
		<Border Background="{DynamicResource BrushPrimary10}"
		        CornerRadius="10">
			<i:Interaction.Behaviors>
				<local:ShadowBehavior Background="{DynamicResource BrushWhite}" />
			</i:Interaction.Behaviors>
			<TextBlock HorizontalAlignment="Center"
			           VerticalAlignment="Center" d:Text="Hello"
			           FontFamily="{StaticResource ChillRoundGothicNormal}"
			           FontSize="100" Text="Local Data Page" />
		</Border>
	</Grid>
</Page>
