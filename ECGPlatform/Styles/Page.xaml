<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style TargetType="{x:Type Page}" x:Key="BasePageStyle">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type Page}">
          <Grid>
            <Border Background="{DynamicResource BrushPrimary10OnMain}" CornerRadius="10">
              <!-- <Border.Effect> -->
              <!--  <DropShadowEffect BlurRadius="10" Direction="270"  -->
              <!--  Opacity="0.2" ShadowDepth="0"  -->
              <!--  Color="{DynamicResource ColorOpposite}" />  -->
              <!-- </Border.Effect> -->
              <ContentPresenter Content="{TemplateBinding Content}" />
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>