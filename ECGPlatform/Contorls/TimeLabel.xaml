<UserControl x:Class="ECGPlatform.TimeLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ECGPlatform"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="0"
             d:DesignWidth="0"
             mc:Ignorable="d">
  <Canvas Margin="0,10">
    <StackPanel Canvas.Left="-8"
                Canvas.Top="-8">
      <TextBlock Margin="0,0,0,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 d:Text="1234"
                 FontFamily="{StaticResource ChillRoundGothicRegular}"
                 FontSize="10"
                 Text="{Binding TimeInterval, RelativeSource={RelativeSource AncestorType=UserControl}}" />
      <TextBlock Margin="0,0,0,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 d:Text="1234"
                 FontFamily="{StaticResource ChillRoundGothicRegular}"
                 FontSize="10"
                 Text="{Binding HeartRate, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </StackPanel>
  </Canvas>


</UserControl>