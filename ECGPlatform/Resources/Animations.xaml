<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Storyboard x:Key="WinBootAnimation">
		<DoubleAnimation
			DecelerationRatio="0.3"
			Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
			From="0.7"
			To="1"
			Duration="0:0:0.2" />
		<DoubleAnimation
			DecelerationRatio="0.3"
			Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
			From="0.7"
			To="1"
			Duration="0:0:0.2" />
		<DoubleAnimation
			DecelerationRatio="0.3"
			Storyboard.TargetProperty="Opacity"
			From="0"
			To="1"
			Duration="0:0:0.2" />
	</Storyboard>


	<Storyboard x:Key="WinCloseAnimation">
		<DoubleAnimation
			DecelerationRatio="0.3"
			Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
			From="1"
			To="0.7"
			Duration="0:0:0.2" />
		<DoubleAnimation
			DecelerationRatio="0.3"
			Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
			From="1"
			To="0.7"
			Duration="0:0:0.2" />
		<DoubleAnimation
			Storyboard.TargetProperty="Opacity"
			From="1"
			To="0"
			Duration="0:0:0.2" />
	</Storyboard>
</ResourceDictionary>