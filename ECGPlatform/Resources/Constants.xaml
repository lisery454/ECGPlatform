<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <sys:Double x:Key="CaptionHeight">30</sys:Double>
  <sys:Double x:Key="ResizeBorderSize">6</sys:Double>
  <Thickness x:Key="ResizeBorderThickness"
             Bottom="{StaticResource ResizeBorderSize}"
             Top="{StaticResource ResizeBorderSize}"
             Left="{StaticResource ResizeBorderSize}"
             Right="{StaticResource ResizeBorderSize}" />

  <sys:Double x:Key="AmendedCaptionHeightDouble">36</sys:Double>
  <GridLength x:Key="AmendedCaptionHeight">36</GridLength>

  <sys:String x:Key="ChineseStr">中文</sys:String>
  <sys:String x:Key="EnglishStr">English</sys:String>
</ResourceDictionary>